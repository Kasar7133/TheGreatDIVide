<h2 class="center red sessions">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  
  <div class="field">
    <%= f.label :username, "Username", class: "form-labels wisteria" %><br />
    <%= f.text_field :username, class: "form-labels text-field"%>
  </div>

  <div class="field">
    <%= f.label :email, class: "form-labels wisteria" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-labels text-field" %>
  </div>


  <div class="field">
    <%= f.label :password, class: "form-labels wisteria" %>
    <% if @minimum_password_length %>
    <em class= "wisteria form-labels">(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-labels text-field"%>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class: "form-labels wisteria" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-labels text-field" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "button success sessions" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
